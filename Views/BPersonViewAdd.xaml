<UserControl x:Class="gestion_concrets.Views.BPersonViewAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gestion_concrets.Views"
              xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="1600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="White">
            <!-- BPerson Section -->
            <Label Content="B - Filazalazana momba ilay olona hadihadiana" HorizontalAlignment="Left" Margin="45,41,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
            <!-- B1 -->
            <Label Content="B1. Anarana sy fanampin'anarana&#xD;&#xA;" HorizontalAlignment="Left" Margin="54,77,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,111,0,0" TextWrapping="Wrap" Text="{Binding BPerson.B1, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- B2 -->
            <Label Content="B2. Taona&#xD;&#xA;" HorizontalAlignment="Left" Margin="54,157,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,191,0,0" TextWrapping="Wrap" Text="{Binding BPerson.B2, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- B3 -->
            <Label Content="B3. " HorizontalAlignment="Left" Margin="54,237,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding SexeOptions}" HorizontalAlignment="Left" Margin="54,271,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding BPerson.B3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- Adress -->
            <Label Content="Adiresy&#xD;&#xA;" HorizontalAlignment="Left" Margin="54,317,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,351,0,0" TextWrapping="Wrap" Text="{Binding BPerson.Adress, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- Phone -->
            <Label Content="Laharana finday&#xD;&#xA;" HorizontalAlignment="Left" Margin="54,397,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,431,0,0" TextWrapping="Wrap" Text="{Binding BPerson.Phone, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- Email -->
            <Label Content="Mailaka&#xD;&#xA;" HorizontalAlignment="Left" Margin="54,477,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,511,0,0" TextWrapping="Wrap" Text="{Binding BPerson.Email, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- B4 -->
            <Label Content="B4. Fari-pahaizana&#xA;" HorizontalAlignment="Left" Margin="54,557,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding Skills}" HorizontalAlignment="Left"  Margin="54,591,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding BPerson.B4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- B42 -->
            <Label Content="B42. Fari-pahaizana: collège/lycée&#xD;&#xA;&#xA;" HorizontalAlignment="Left" Margin="54,637,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding SkillsSubOptions}" HorizontalAlignment="Left"   Margin="54,671,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding BPerson.B42, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- B51 -->
            <Label Content="B51. Fiofanana arakasa: Eny/Tsia" HorizontalAlignment="Left" Margin="54,717,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding Working}" HorizontalAlignment="Left" Margin="54,751,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding BPerson.B51, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- B52 -->
            <Label Content="B52. Farito raaha &quot;eny&quot;" HorizontalAlignment="Left" Margin="54,797,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,831,0,0" TextWrapping="Wrap" Text="{Binding BPerson.B52, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- B6 -->
            <Label Content="B6. Asa fivelomana&#xD;&#xA;" HorizontalAlignment="Left" Margin="54,877,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding LivingJob}" HorizontalAlignment="Left" Margin="54,911,0,0"  VerticalAlignment="Top" Width="172" Height="32" SelectedItem="{Binding BPerson.B6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- B7 -->
            <Label Content="B7. Inona no fahasembanana misy aminao ?" HorizontalAlignment="Left" Margin="55,1050,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding Disability}" HorizontalAlignment="Left" Margin="55,1081,0,0"  VerticalAlignment="Top" Width="206" Height="32" SelectedItem="{Binding BPerson.B7, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- B71 -->
            <Label Content="B71. Hafa (farito mazava)" HorizontalAlignment="Left" Margin="55,1119,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,1153,0,0" TextWrapping="Wrap" Text="{Binding BPerson.B71, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- B72 -->
            <Label Content="B72. Mitondra fitaovana manokana manampy ve ianao ?" HorizontalAlignment="Left" Margin="54,1199,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding DisabilityEquipment}" HorizontalAlignment="Left"   Margin="54,1233,0,0"   VerticalAlignment="Top" Width="318" Height="32" SelectedItem="{Binding BPerson.B72, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- B8 -->
            <Label Content="B8.  Fiankohonana: Mpitovo/Tokatena/Mananjanaka/Tsy manan-janaka/Manam-bady" HorizontalAlignment="Left" Margin="55,1453,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding Worship}" HorizontalAlignment="Left" Margin="55,1492,0,0" VerticalAlignment="Top" Width="318" Height="32" SelectedItem="{Binding BPerson.B8, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>


            <Label Content="B61. Farito raha 'eny'" HorizontalAlignment="Left" Margin="55,970,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left"   Margin="55,1004,0,0" TextWrapping="Wrap" Text="{Binding BPerson.B61, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
           
            <Label Content="B73. Hafa&#xD;&#xA;" HorizontalAlignment="Left" Margin="54,1288,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,1322,0,0" TextWrapping="Wrap" Text="{Binding BPerson.B73, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <Label Content="B74. Fanamarihana manokana amin'ny fitaovana ampiasaina " HorizontalAlignment="Left" Margin="55,1382,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="55,1416,0,0" TextWrapping="Wrap" Text="{Binding BPerson.B74, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            </Grid>
    </ScrollViewer>
</UserControl>

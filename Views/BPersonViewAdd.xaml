<UserControl x:Class="gestion_concrets.Views.BPersonViewAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gestion_concrets.Views"
              xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="900" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="White">
            <!-- BPerson Section -->
            <Label Content="B - Filazalazana momba ilay olona hadihadiana" HorizontalAlignment="Left" Margin="45,41,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
            <!-- B1 -->
            <Label Content="B1. Moa ve ilay olona hadihadiana no mamaly fanontaniana ?" HorizontalAlignment="Left" Margin="54,77,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding Questions}" HorizontalAlignment="Left" Margin="54,111,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding BPerson.B1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- B2 -->
            <Label Content="B2. Anarana sy fanampin'anarana" HorizontalAlignment="Left" Margin="54,157,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,191,0,0" TextWrapping="Wrap" Text="{Binding BPerson.B2, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- B3 -->
            <Label Content="B3. Taona format (jj/mm/aaaa)" HorizontalAlignment="Left" Margin="54,237,0,0" VerticalAlignment="Top" FontSize="14"/>
            <DatePicker x:Name="B2DatePicker" 
            HorizontalAlignment="Left" 
            Margin="54,271,0,0" 
            VerticalAlignment="Top" 
            Width="371" 
            Height="29"
            SelectedDate="{Binding BPerson.DateTime, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
            DisplayDateStart="1900-01-01" 
            DisplayDateEnd="{Binding CurrentDate, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"/>
            <!-- B4 -->
            <Label Content="B4. Lahy/Vavy" HorizontalAlignment="Left" Margin="54,317,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding SexeOptions}" HorizontalAlignment="Left" Margin="54,351,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding BPerson.B4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- Adress -->
            <Label Content="Adiresy" HorizontalAlignment="Left" Margin="54,397,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,431,0,0" TextWrapping="Wrap" Text="{Binding BPerson.Adress, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- Phone -->
            <Label Content="Laharana finday" HorizontalAlignment="Left" Margin="54,477,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,511,0,0" TextWrapping="Wrap" Text="{Binding BPerson.Phone, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- Email -->
            <Label Content="Mailaka" HorizontalAlignment="Left" Margin="54,557,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,591,0,0" TextWrapping="Wrap" Text="{Binding BPerson.Email, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- B5 -->
            <Label Content="B5. Toe-panambadiana" HorizontalAlignment="Left" Margin="54,637,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding Relationship}" HorizontalAlignment="Left" Margin="54,671,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding BPerson.B5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- B6 -->
            <Label Content="B6. Asa fivelomana" HorizontalAlignment="Left" Margin="54,717,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding LivingJob}" HorizontalAlignment="Left" Margin="54,751,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding BPerson.B6, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- B61 -->
            <Label Content="B61. Hafa:8" HorizontalAlignment="Left" Margin="54,797,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,831,0,0" TextWrapping="Wrap" Text="{Binding BPerson.B61, UpdateSourceTrigger=PropertyChanged}"  VerticalAlignment="Top" Width="371" Height="29"/>
            </Grid>
    </ScrollViewer>
</UserControl>

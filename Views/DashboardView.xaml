<Page x:Class="gestion_concrets.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      xmlns:local="clr-namespace:gestion_concrets.Views"
      d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Page.Resources>
        <!-- Style commun pour toutes les cartes -->
        <Style TargetType="Border" x:Key="CardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les boutons -->
        <Style TargetType="Button" x:Key="CardButtonStyle">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre du tableau de bord -->
        <TextBlock Text="Tableau de bord" 
                   FontSize="24" 
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   Margin="0,0,0,20"/>

        <!-- Cartes dans un WrapPanel pour extensibilité -->
        <WrapPanel Grid.Row="1" Orientation="Horizontal">
            <!-- Carte : Nombre total de personnes -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Margin="16">
                    <TextBlock Text="Total Personnes" 
                               FontSize="14" 
                               FontWeight="Medium"
                               Foreground="#555555"/>
                    <TextBlock x:Name="TotalPersonsText" 
                               Text="0" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#2196F3" 
                               Margin="0,12,0,16"/>
                    <Button Content="Export excel" 
                            x:Name="ExportTotalButton" 
                            Style="{StaticResource CardButtonStyle}"
                            Background="#2196F3"
                            Click="ExportTotal_Click"/>
                </StackPanel>
            </Border>

            <!-- Carte : Nombre d'hommes -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Margin="16">
                    <TextBlock Text="Hommes Inscrits" 
                               FontSize="14" 
                               FontWeight="Medium"
                               Foreground="#555555"/>
                    <TextBlock x:Name="TotalMenText" 
                               Text="0" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#4CAF50" 
                               Margin="0,12,0,16"/>
                    <Button Content="Export Excel" 
                            x:Name="ExportMenButton" 
                            Style="{StaticResource CardButtonStyle}"
                            Background="#4CAF50"
                            Click="ExportMen_Click"/>
                </StackPanel>
            </Border>

            <!-- Carte : Nombre de femmes -->
            <Border Style="{StaticResource CardStyle}">
                <StackPanel Margin="16">
                    <TextBlock Text="Femmes Inscrites" 
                               FontSize="14" 
                               FontWeight="Medium"
                               Foreground="#555555"/>
                    <TextBlock x:Name="TotalWomenText" 
                               Text="0" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#E91E63" 
                               Margin="0,12,0,16"/>
                    <Button Content="Export excel" 
                            x:Name="ExportWomenButton" 
                            Style="{StaticResource CardButtonStyle}"
                            Background="#E91E63"
                            Click="ExportWomen_Click"/>
                </StackPanel>
            </Border>
        </WrapPanel>
    </Grid>
</Page>
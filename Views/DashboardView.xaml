<Page x:Class="gestion_concrets.Views.DashboardView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:gestion_concrets.Views"
             d:DesignHeight="450" d:DesignWidth="800" Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre du tableau de bord -->
        <TextBlock Text="Tableau de bord" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Cartes dans un WrapPanel pour extensibilité -->
        <WrapPanel Grid.Row="1" Orientation="Horizontal">
            <!-- Carte : Nombre total de personnes -->
            <Border Background="#E3F2FD" CornerRadius="8" Margin="8" Width="180" Height="140"
                    BorderBrush="#BBDEFB" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel Margin="12">
                    <TextBlock Text="Total Personnes" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalPersonsText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#1976D2" Margin="0,8,0,10"/>
                    <Button Content="Exporter" x:Name="ExportTotalButton" FontSize="12" Background="#1976D2" Foreground="White" Height="30"
                            BorderThickness="0" Click="ExportTotal_Click">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Carte : Nombre d'hommes -->
            <Border Background="#E8F5E9" CornerRadius="8" Margin="8" Width="180" Height="140"
                    BorderBrush="#C8E6C9" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel Margin="12">
                    <TextBlock Text="Hommes Inscrits" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalMenText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#388E3C" Margin="0,8,0,10"/>
                    <Button Content="Exporter" x:Name="ExportMenButton" FontSize="12" Background="#388E3C" Foreground="White" Height="30"
                            BorderThickness="0" Click="ExportMen_Click">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Carte : Nombre de femmes -->
            <Border Background="#FCE4EC" CornerRadius="8" Margin="8" Width="180" Height="140"
                    BorderBrush="#F8BBD0" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="4" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel Margin="12">
                    <TextBlock Text="Femmes Inscrites" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TotalWomenText" Text="0" FontSize="24" FontWeight="Bold" Foreground="#C2185B" Margin="0,8,0,10"/>
                    <Button Content="Exporter" x:Name="ExportWomenButton" FontSize="12" Background="#C2185B" Foreground="White" Height="30"
                            BorderThickness="0" Click="ExportWomen_Click">
                        <Button.Resources>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>
        </WrapPanel>
    </Grid>
</Page>

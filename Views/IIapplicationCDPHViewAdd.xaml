<UserControl x:Class="gestion_concrets.Views.IIapplicationCDPHViewAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gestion_concrets.Views"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="White">
            <Label Content="II - Fampiharana ny CDPH" HorizontalAlignment="Left" Margin="45,41,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
            <!-- II1 -->
            <Label Content="II1. Fantatrao ve ny fisian'ny CDPH" HorizontalAlignment="Left" Margin="54,77,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding  II1Options}" HorizontalAlignment="Left"  Margin="54,111,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding Itransmission.I51, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- II2 -->
            <Label Content="II2. Raha eny, efa nisy ve ny fampiharana izany teo aminn'ny: " HorizontalAlignment="Left" Margin="54,157,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,191,0,0" TextWrapping="Wrap" Text="{Binding IIapplicationCDPH.II2, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- II3 -->
            <Label Content="II3II3. Azonao azavaina ve ny fomba nampiharana io CDPH io tamin'ny faritra voalazanao tetsy ambony ?" HorizontalAlignment="Left" Margin="54,237,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,271,0,0" TextWrapping="Wrap" Text="{Binding IIapplicationCDPH.II3, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- II4 -->
            <Label Content="II4. Raha tsia, inona non antony tsy nahatanteraka izany ?" HorizontalAlignment="Left" Margin="54,317,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,351,0,0" TextWrapping="Wrap" Text="{Binding IIapplicationCDPH.II4, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- II5 -->
            <Label Content="II5. Inona no sosokevitrao mba ho fanantanterahana ny CDPH any amin'ny toerana misy anao." HorizontalAlignment="Left" Margin="54,397,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,431,0,0" TextWrapping="Wrap" Text="{Binding IIapplicationCDPH.II5, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="371" Height="29"/>
            <!-- II6 -->
            <Label Content="II6. Inona no andraikitra ho raisinao ho fanantanterahana ny CDPH ?" HorizontalAlignment="Left" Margin="54,477,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,511,0,0" TextWrapping="Wrap" Text="{Binding IIapplicationCDPH.II6, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="371" Height="29"/>
        </Grid>
    </ScrollViewer>
</UserControl>

<UserControl x:Class="gestion_concrets.Views.IVdutyGovViewAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gestion_concrets.Views"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
            d:DesignHeight="800" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="White">
             <!-- IVdutyGov Section -->
            <Label Content="IV - Fandraisana andraikitry ny Fanjakana" HorizontalAlignment="Left" Margin="45,41,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
            <!-- IV11 -->
            <Label Content="IV11. Ho anao, misy ve ny fandraisana andraikitra avy amin'ny fanjakàna ny amin'ny fanajàna sy &#xD;&#xA;fanatanterahana ny zon'ny olona manana fahasembanana ?" HorizontalAlignment="Left" Margin="54,77,0,0" VerticalAlignment="Top" FontSize="14" Height="46"/>
            <ComboBox ItemsSource="{Binding IV11Options}" HorizontalAlignment="Left" Margin="54,123,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding IVdutyGov.IV11, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- IV12 -->
            <Label Content="IV12. Raha eny, hazavao" HorizontalAlignment="Left" Margin="54,163,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,197,0,0" TextWrapping="Wrap" Text="{Binding IVdutyGov.IV12, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="653" Height="29"/>
            <!-- IV13 -->
            <Label Content="IV13. Raha tsia, hazavao" HorizontalAlignment="Left" Margin="54,237,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,271,0,0" TextWrapping="Wrap" Text="{Binding IVdutyGov.IV13, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="653" Height="29"/>
            <!-- IV2 -->
            <Label Content="IV2. Inona no heverinao ho sakana tsy ahafahan'ny Fanjakàna mandray andraikitra amin'ny fanajàna sy &#xD;&#xA;fanatanterahana ny zon'ny olona manana fahasembanana ?" HorizontalAlignment="Left" Margin="54,317,0,0" VerticalAlignment="Top" FontSize="14" Height="42"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,361,0,0" TextWrapping="Wrap" Text="{Binding IVdutyGov.IV2, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="653" Height="29"/>
            <!-- IV3 -->
            <Label Content="IV3. Inona no sosokevitra avy aminao ho fanatsaràna bebe kokoa ny fandraisan'andraikitry ny Fanjàkana momba ny fanajàna sy&#xD;&#xA; fampiharana ny zon'ny olona manana fahasembanana ?" HorizontalAlignment="Left" Margin="54,409,0,0" VerticalAlignment="Top" FontSize="14" Height="47"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,461,0,0" TextWrapping="Wrap" Text="{Binding IVdutyGov.IV3, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="653" Height="43"/>
            <!-- IV4 -->
            <Label Content="IV4. Inona no andraikitry ny olona manana fahasembanana momba ny fanatsaràna &#xD;&#xA;izany fandraisana andraikitry ny Fanjàkana izany ?" HorizontalAlignment="Left" Margin="54,509,0,0" VerticalAlignment="Top" FontSize="14" Height="44"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,553,0,0" TextWrapping="Wrap" Text="{Binding IVdutyGov.IV4, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="653" Height="42"/>
            <!-- IV51 -->
            <Label Content="IV51. Efa nandray anjara tamin'ny atrikasa nandrafetana paikady na drafitrasa &#xD;&#xA;nasionaly momba ny fampandrosoana ve ianao ?" HorizontalAlignment="Left" Margin="54,613,0,0" VerticalAlignment="Top" FontSize="14" Height="48"/>
            <ComboBox ItemsSource="{Binding IV51Options}" HorizontalAlignment="Left" Margin="54,661,0,0"  VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding IVdutyGov.IV51, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- IV52 -->
            <Label Content="IV52. Raha eny, farito sy hazavao" HorizontalAlignment="Left" Margin="54,699,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,735,0,0" TextWrapping="Wrap" Text="{Binding IVdutyGov.IV52, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="653" Height="29"/>

        </Grid>
    </ScrollViewer>
</UserControl>

<Page x:Class="gestion_concrets.Views.PersonDetailsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:gestion_concrets.Views"
      xmlns:converters="clr-namespace:gestion_concrets.Converters"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d">

    <Page.Resources>
        <!-- Style pour le TabControl (style Chrome) -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderThickness="1,1,1,0" BorderBrush="#D0D0D0" 
                                CornerRadius="4,4,0,0" Margin="2,0">
                            <ContentPresenter x:Name="ContentSite" 
                                              ContentSource="Header" 
                                              VerticalAlignment="Center" 
                                              HorizontalAlignment="Center" 
                                              Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#BBBBBB"/>
                                <Setter Property="Foreground" Value="#0078D4"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E8E8E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour les boutons -->
        <Style TargetType="ui:Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005EA2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ui:Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#005EA2"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#004C87"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#CCCCCC"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#AAAAAA"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style spécifique pour le bouton Modifier -->
        <Style x:Key="ModifierButtonStyle" TargetType="ui:Button" BasedOn="{StaticResource {x:Type ui:Button}}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ui:Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#388E3C"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#2E7D32"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Border" Property="Background" Value="#CCCCCC"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#AAAAAA"/>
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Pour le titre et l'étape -->
            <RowDefinition Height="*"/>
            <!-- Pour le TabControl -->
            <RowDefinition Height="Auto"/>
            <!-- Pour les boutons -->
        </Grid.RowDefinitions>

        <!-- Indicateur de progression et titre -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Label Content="FAKAN-KEVITRA ISAM-PARITRA AVY AMIN'NY OLONA MANANA FAHASEMBANANA" 
                   FontSize="16" FontWeight="Bold" Foreground="#FF6D6464" Margin="0,0,20,0"/>
            <Label Content="{Binding SelectedTabIndex, StringFormat={}Étape {0} sur 8}" 
                   FontSize="14" FontWeight="Bold" Foreground="#333333"/>
        </StackPanel>

        <!-- TabControl -->
        <TabControl Grid.Row="1" SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}" 
                    Margin="10">
            <TabItem Header="B - Filazalazana momba ilay olona hadihadiana">
                <local:BPersonView DataContext="{Binding BPerson}"/>
            </TabItem>

            <TabItem Header="A - Faritra anaovana fanadihadiana">
                <local:AlocalisationView DataContext="{Binding Alocalisation}"/>
            </TabItem>
            
            <TabItem Header="I - Fampiatiana">
                <local:ItransmissionView DataContext="{Binding Itransmission}"/>
            </TabItem>
            <TabItem Header="II - Fampiharana ny CDPH">
                <local:IIapplicationCDPHView DataContext="{Binding IIapplicationCDPH}"/>
            </TabItem>
            <TabItem Header="III - Ny zon'ny olona manana fahasembanana">
                <local:IIIrightView DataContext="{Binding IIIright}"/>
            </TabItem>
            <TabItem Header="IV - Fandraisana andraikitra ny fanjakana">
                <local:IVdutyGovView DataContext="{Binding IVdutyGov}"/>
            </TabItem>
            <TabItem Header="V - Fampiatiana ny olona manana fahasembanana amin'ny fampandrosoana">
                <local:VdevSupportView DataContext="{Binding VdevSupport}"/>
            </TabItem>
            <TabItem Header="VI - Fiarahana amin'ny mpiaramiombon'antoka samihafa">
                <local:VIpartnerCollabView DataContext="{Binding VIpartnerCollab}"/>
            </TabItem>
        </TabControl>

        <!-- Boutons de navigation -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,10,0,20">
            <ui:Button Content="Précédent" 
                       Width="100" 
                       Height="40" 
                       Margin="10,0" 
                       Command="{Binding PreviousTabCommand}" 
                       IsEnabled="{Binding CanGoPrevious}"/>
            <ui:Button Content="Suivant" 
                       Width="100" 
                       Height="40" 
                       Margin="10,0" 
                       Command="{Binding NextTabCommand}" 
                       IsEnabled="{Binding CanGoNext}"/>
            <ui:Button Content="Sauvegarder" 
                       Width="100" 
                       Height="40" 
                       Margin="10,0" 
                       Command="{Binding UpdateCommand}"/>
            <ui:Button Content="Supprimer" 
                       Width="100" 
                       Height="40" 
                       Margin="10,0" 
                       Command="{Binding DeleteCommand}"/>
            <!-- Espace pour séparer visuellement -->
            <Border Width="20"/>
            <ui:Button Content="Modifier" 
                       Width="100" 
                       Height="40" 
                       Margin="10,0" 
                       Style="{StaticResource ModifierButtonStyle}"
                       Command="{Binding ToggleEditCommand}"/>
        </StackPanel>
    </Grid>
</Page>
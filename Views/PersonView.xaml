<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:gestion_concrets.Views"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
    x:Class="gestion_concrets.Views.PersonView"
    mc:Ignorable="d" d:DesignWidth="800">
    <Grid Background="White" Margin="10">
        <!-- Indicateur de progression -->
        <Label Content="{Binding SelectedTabIndex, StringFormat={}Étape {0} sur 8}" 
               HorizontalAlignment="Center" 
               FontSize="14" 
               FontWeight="Bold" 
               Margin="0,10,0,0"/>

        <!-- TabControl -->
        <TabControl SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}" 
                    Margin="0,40,0,120">
            <TabItem Header="A - Faritra anaovana fanadihadiana">
                <local:AlocalisationView/>
            </TabItem>
            <TabItem Header="B - Filazalazana momba ilay olona hadihadiana">
                <local:BPersonView/>
            </TabItem>
            <TabItem Header="I - Fampiatiana">
                <local:ItransmissionView/>
            </TabItem>
            <TabItem Header="II - Fampiharana ny CDPH">
                <local:IIapplicationCDPHView/>
            </TabItem>
            <TabItem Header="III - Ny zon'ny olona manana fahasembanana">
                <local:IIIrightView/>
            </TabItem>
            <TabItem Header="IV - Fandraisana andraikitra ny fanjakana">
                <local:IVdutyGovView/>
            </TabItem>
            <TabItem Header="V - Fampiatiana ny olona manana fahasembanana amin'ny fampandrosoana">
                <local:VdevSupportView/>
            </TabItem>
            <TabItem Header="VI - Fiarahana amin'ny mpiaramiombon'antoka samihafa">
                <local:VIpartnerCollabView/>
            </TabItem>
        </TabControl>

        <!-- Boutons de navigation -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,0,0,20">
            <ui:Button Content="Précédent" 
                       Width="120" 
                       Height="40" 
                       Margin="10" 
                       Command="{Binding PreviousTabCommand}" 
                       IsEnabled="{Binding CanGoPrevious}"/>
            <ui:Button Content="Suivant" 
                       Width="120" 
                       Height="40" 
                       Margin="10" 
                       Command="{Binding NextTabCommand}" 
                       IsEnabled="{Binding CanGoNext}"/>
            <ui:Button Content="Enregistrer" 
                       Width="120" 
                       Height="40" 
                       Margin="10" 
                       Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Page>
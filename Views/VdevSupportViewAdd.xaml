<UserControl x:Class="gestion_concrets.Views.VdevSupportViewAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:gestion_concrets.Views"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="White">
            <!-- VdevSupport Section -->
            <Label Content="V - Fampiatiana ny olona manana fahasembanana amin'ny fampandrosoana" HorizontalAlignment="Left" Margin="45,41,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
            <!-- V1 -->
            <Label Content="V1. Fantatrao ve ny fisian'ny fanampiana samihafa ataon'ny Fanjakana ho fitsinjovana ireo olona marefo na traboina ?" HorizontalAlignment="Left" Margin="54,77,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding V1Options}" HorizontalAlignment="Left" Margin="54,117,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding VdevSupport.V1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- V2 -->
            <Label Content="V2. Raha eny, isan'ireo mpisitraka izany ve ianao ? Lazao ilay karazan'ny fanampiana nisitrahanao ?" HorizontalAlignment="Left" Margin="54,157,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,191,0,0" TextWrapping="Wrap" Text="{Binding VdevSupport.V2, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="676" Height="29"/>
            <!-- V3 -->
            <Label Content="V3. Raha tsia, hazavao ny antony tsy nisitrahanao izany ?" HorizontalAlignment="Left" Margin="54,237,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,271,0,0" TextWrapping="Wrap" Text="{Binding VdevSupport.V3, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="676" Height="29"/>
            <!-- V41 -->
            <Label Content="V41. Mahafantatra ireo tetikasam-panjakana momba ny fampandrosoana ve ianao ? (Tetikasa fihariana ? ...)" HorizontalAlignment="Left" Margin="54,317,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding V41Options}" HorizontalAlignment="Left" Margin="54,351,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding VdevSupport.V41, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- V42 -->
            <Label Content="V42. Raha eny, inona ilay tetikasa ? Hazava" HorizontalAlignment="Left" Margin="54,397,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,431,0,0" TextWrapping="Wrap" Text="{Binding VdevSupport.V42, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="676" Height="41"/>
            <!-- V51 -->
            <Label Content="V51. Isan'ireo mpisitraka tetikasam-panjakana momba ny fampandrosoana ve ianao ?" HorizontalAlignment="Left" Margin="54,477,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ComboBox ItemsSource="{Binding V51Options}" HorizontalAlignment="Left" Margin="54,511,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedItem="{Binding VdevSupport.V51, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <!-- V52 -->
            <Label Content="V52. Raha eny, ahoana no fomba nahafahanao nisitraka ilay tetikasa " HorizontalAlignment="Left" Margin="54,557,0,0" VerticalAlignment="Top" FontSize="14"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,591,0,0" TextWrapping="Wrap" Text="{Binding VdevSupport.V52, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="672" Height="29"/>
            <!-- V53 -->
            <Label Content="V53. Raha tsia, inona no sosokevitra avy aminao mba hisitrahan'ny olona manana fahasembanana &#xD;&#xA;misitraka ny tetikasam-panjakana momba ny fampandrosoana ? " HorizontalAlignment="Left" Margin="54,637,0,0" VerticalAlignment="Top" FontSize="14" Height="47"/>
            <ui:TextBox HorizontalAlignment="Left" Margin="54,689,0,0" TextWrapping="Wrap" Text="{Binding VdevSupport.V53, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="676" Height="65"/>

        </Grid>
    </ScrollViewer>
</UserControl>
